<?xml version="1.0" encoding="UTF-8"?>
<StructureDefinition
    xmlns="http://hl7.org/fhir">
    <id value="uds-plus-recordedDate-extension"/>
    <meta>
        <versionId value="2"/>
        <lastUpdated value="2022-07-12T02:03:21.911+00:00"/>
        <source value="#IqyJCmUTqk2pvKFb"/>
    </meta>
    <url value="http://fhir.org/guides/hrsa/uds-plus/StructureDefinition/uds-plus-recordedDate-extension"/>
    <version value="0.1.0"/>
    <name value="UDSPlusRecordedDateExtension"/>
    <title value="UDS Plus RecordedDate Extension"/>
    <status value="active"/>
    <experimental value="false"/>
    <date value="2019-09-01"/>
    <publisher value="HL7 International - Public Health Work Group"/>
    <contact>
        <telecom>
            <system value="url"/>
            <value value="http://hl7.org/Special/committees/pher"/>
        </telecom>
    </contact>
    <description value="Indicates the recorded date of a clinical event"/>
    <jurisdiction>
        <coding>
            <system value="urn:iso:std:iso:3166"/>
            <code value="US"/>
        </coding>
    </jurisdiction>
    <fhirVersion value="4.0.1"/>
    <kind value="complex-type"/>
    <abstract value="false"/>
    <context>
        <type value="element"/>
        <expression value="Procedure"/>
    </context>
    <type value="Extension"/>
    <baseDefinition value="http://hl7.org/fhir/StructureDefinition/Extension"/>
    <derivation value="constraint"/>
    <differential>
        <element id="Extension">
            <path value="Extension"/>
            <short value="Indicates the recorded date of a clinical event"/>
            <definition value="Indicates the recorded date of a clinical event"/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="Extension.url">
            <path value="Extension.url"/>
            <type>
                <code value="uri"/>
            </type>
            <fixedUri value="http://fhir.org/guides/hrsa/uds-plus/StructureDefinition/uds-plus-recordedDate-extension"/>
        </element>
        <element id="Extension.value[x]">
            <path value="Extension.value[x]"/>
            <min value="1"/>
            <max value="1"/>
            <type>
                <code value="dateTime"/>
            </type>
            <constraint>
		        <key value="uds-plus-rec-date-1"/>
		        <severity value="error"/>
		        <human value="All dateTime data elements should be truncated to a year only for de-identified resources."/>        
		        <expression value="$this is DateTime implies $this.toString().length() = 4" />
		    </constraint>
		     <constraint>
		        <key value="uds-plus-rec-date-1a"/>
		        <severity value="error"/>
		        <human value="All dateTime data elements should have valid year &gt; 1900"/>        
		        <expression value="$this is DateTime implies $this.toString() &gt;= '1900'" />
		    </constraint>
		    <constraint>
		        <key value="uds-plus-rec-date-1b"/>
		        <severity value="error"/>
		        <human value="All dateTime data elements should have valid year &lt; 2030"/>        
		        <expression value="$this is DateTime implies $this.toString() &lt;= '2030'" />
		    </constraint>
        </element>
    </differential>
</StructureDefinition>